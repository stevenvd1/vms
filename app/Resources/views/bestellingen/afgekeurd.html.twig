{% extends 'base.html.twig' %}

{% block body %}
<link rel="stylesheet" href="{{ asset('css/table.css') }}" />
<br>
<center><h1 class="page-header">Afkeuringen overzicht</h1></center>
<table class="table table-striped">
<thead>
<tr class="bg-primary">
<th>Bestelordernummer</th>
<th>Bestelregel</th>
<th>Artikelnummer</th>
<th>Artikelnaam</th>
<th>Hoeveelheid</th>

</tr>
</thead>
<tbody>
{% for bestelling in bestellingen %}
{% if loop.index % 1 == 0 or loop.last %}
{% if bestelling.status == 3 %}
<tr>
<td scope="row"> {{bestelling.bestelordernummer}} </td>
<td>{{bestelling.bestelregel}}</td>
<td>{{bestelling.artikel.artikelnr}}</td>
<td>{{bestelling.artikel.naam}}</td>
<td>{{bestelling.aantal}}</td>
</tr>
{% endif %}
{% endif %}
{% endfor %}
</tbody>
</table>

<div class="navigation">
    {{ knp_pagination_render(bestellingen) }}
</div>
{% endblock %}
