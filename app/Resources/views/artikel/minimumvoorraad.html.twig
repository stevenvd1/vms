{# dit twig helpt mee met het opbouwen van het minimumvoorraad functie #}
{% extends 'base.html.twig' %}
{% block body %}
	<h2 class="page-header">Overzicht Artikelen onder de minimumvoorraad</h2>
	<table class="table table-striped">
<link rel="stylesheet" href="{{ asset('css/table.css') }}" />
	<thead>
	<tr>
	<th>Artikelnummer</th>
	<th>Naam</th>
	<th>locatie</th>
	<th>Minimale voorraad</th>
	<th>Voorraad</th>
	<th>Inkoopprijs</th>
	<th>Bestelserie</th>
	</tr>
	</thead>
	<tbody>
	{% for artikel in artikelen %}
	<tr>
				<th scope="row"> {{artikel.artikelnr}} </th>
				<td>{{artikel.specs}} </td>
				<td>{{artikel.locatie}} </td>
				<td>{{artikel.minVoorraad}} </td>
				<td>{{artikel.voorraad}} </td>
				<td>{{artikel.inkoopprijs}} </td>
				<td>{{artikel.bestelserie}} </td>

	{% endfor %}
	</tbody>
	</table>
{% endblock %}
