{% extends 'base.html.twig' %}

{% block body %}
<br>
<h2 class="page-header">Bestellingen overzicht</h2>
<table class="table table-striped">
<thead>
<tr>
<th>Bestelordernummer</th>
<th>Bestelregel</th>
<th>Leverancier</th>
<th>Artikelnummer</th>
<th>Beschrijving</th>
<th>Aantal</th>
<th>Acties</th>
</tr>
</thead>
<tbody>
{% for bestelling in bestellingen %}
{% if loop.index % 1 == 0 or loop.last %}
{% if bestelling.status == 0 %}
<tr>
<th scope="row"> {{bestelling.bestelordernummer}} </th>
<td>{{bestelling.bestelregel}}</td>
<td>{{bestelling.leverancier}}</td>
<td>{{bestelling.artikel.artikelnr}}</td>
<td>{{bestelling.artikel.naam}}</td>
<td>{{bestelling.aantal}}</td>
<td><a href="bestelling/wijzig/{{ bestelling.id }}" class="btn btn-info">Verwerk</a></td>
</tr>
{% endif %}
{% endif %}
{% endfor %}
</tbody>
</table>

<div class="navigation">
    {{ knp_pagination_render(bestellingen) }}
</div>
{% endblock %}
