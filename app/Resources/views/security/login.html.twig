{# app/Resources/views/security/login.html.twig #}
{# ... you will probably extend your base template, like base.html.twig #}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path('login') }}" method="post">
    <center><label for="username">Username:</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" required />
    <br>
    <br>

    <label for="password">Password:</label>
    <input type="password" id="password" name="_password" required />

    {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}
<br><br>
<hr>
    <button type="submit">login</button><br>
    <input type="checkbox" checked="checked"> Onthoud me<br>
    <span class="psw"> <a href="#">Wachtwoord</a> vergeten?</span>
    </center>
</form>
